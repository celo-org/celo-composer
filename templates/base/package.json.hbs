{
  "name": "{{projectName}}",
  "version": "0.1.0",
  "description": "{{description}}",
  "private": true,
  "scripts": {
    "build": "turbo build",
    "dev": "turbo dev",
    "lint": "turbo lint",
    "clean": "turbo clean",
    "type-check": "turbo type-check"{{#if (eq contractFramework "hardhat")}},
    "contracts:compile": "turbo run compile --filter=hardhat",
    "contracts:test": "turbo run test --filter=hardhat",
    "contracts:deploy": "turbo run deploy --filter=hardhat",
    "contracts:deploy:celo-sepolia": "turbo run deploy:celo-sepolia --filter=hardhat",
    "contracts:deploy:celo": "turbo run deploy:celo --filter=hardhat"{{/if}}
  },
  "devDependencies": {
    "@types/node": "^20.8.0",
    "turbo": "^1.10.16",
    "typescript": "^5.2.2"
  },
  "packageManager": "pnpm@8.10.0",
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=8.0.0"
  }
}
