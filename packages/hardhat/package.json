        "hardhat-deploy": "^0.11.19",
        "node-watch": "^0.7.3"
    },
    "dependencies": {
        "@celo/contracts": "^9.0.0",
        "@openzeppelin/contracts": "^4.9.3",
        "ganache": "^7.5.0",
        "typescript": "^4.8.4"
